<h2>All Heroines</h2>

<%= form_with(url: search_heroines_path, method: "get") do %>
  <%= label_tag(:q, "Search By Superpower:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>
