<h1>Create a new Heroine!</h1>

<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |message| %>
            <li> <%= message%> </li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br>

    <%= f.label :power_id %>
    <%= f.collection_select(:power_id, @powers, :id, :name, prompt:true)%><br>

    <%= f.submit%>
<% end %>