<h1>Create A Heroine!</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |err|%>
        <h4>ERROR: <%= err %></h4>
    <%end%>
<%end%>

<%= form_for @heroine do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
    <br><br>

    <%= f.label :power_id %>
    <%= f.collection_select :power_id, Power.all, :id, :name, prompt: true%>
    <br><br><br>

    <%= f.submit "Create Heroine!"%>

<%end%>