<!-- Not using _form because it's used only in create method,if there were more methods requiring same form, I'd use partial -->
<% if flash[:error] %>
    <ul>
    <% flash[:error].each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
<% end%>


<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br>
    <%= f.label :power %>
    <%= f.collection_select :power_id, Power.all, :id, :name, prompt: true %>


    <%= f.submit %>
<% end %>