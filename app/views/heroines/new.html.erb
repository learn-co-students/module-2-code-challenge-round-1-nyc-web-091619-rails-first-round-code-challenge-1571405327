<h1>Create A Heroine</h1>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= form_with model: @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%><br/>
    <%= f.label :super_name %>
    <%= f.text_field :super_name%><br/>
    
    <%= f.collection_select :power_id, @powers, :id, :name, prompt: true %><br/>

    <%= f.submit %>
<% end %>

<%= link_to "Back", heroines_path %>