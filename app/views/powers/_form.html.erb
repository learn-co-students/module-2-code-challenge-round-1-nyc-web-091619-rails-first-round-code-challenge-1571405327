<% if flash[:errors] %>
    <% flash[:errors].each do |err|%>
        <h4>ERROR: <%= err %></h4>
    <%end%>
<%end%>

<%= form_for @power do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :description %><br>
    <%= f.text_area :description %>
    <br><br>

    <%= f.submit "Submit!"%>

<%end%>